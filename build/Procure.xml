		</classes>

	</test>
	<!-- 9 -->
	<!-- Procure Network Table Checkbox -->

	<test name="Verify Procure network Table Checkbox">

		<classes>

			<class name="com.procurenetworks.verifications.ProcureNetworks">

				<methods>

