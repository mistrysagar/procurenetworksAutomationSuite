				</methods>

			</class>

		</classes>

	</test>
	<!-- 6 -->
	<!-- Procure Network Search Dropdown List -->

	<test name="Verify Procure network Search Dropdown List">

		<classes>

			<class name="com.procurenetworks.verifications.ProcureNetworks">

				<methods>

					<include name="Asset_Search_Dropdownlist">
					</include>

				</methods>

			</class>

		</classes>

	</test>
	<!-- 7 -->
	<!-- Procure Network dropdown list -->

	<test name="Verify Procure network dropdownlist">

		<classes>

			<class name="com.procurenetworks.verifications.ProcureNetworks">

				<methods>

					<include name="Asset_site_Dropdownlist">
					</include>

				</methods>

			</class>

		</classes>

	</test>
	<!-- 8 -->
	<!-- Procure Network Table Pagination -->

	<test name="Verify Procure network table pagination">

		<classes>

			<class name="com.procurenetworks.verifications.ProcureNetworks">

				<methods>

